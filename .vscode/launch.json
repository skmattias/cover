    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "omslag",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "SECRET_KEY": "super secret string",
                "OMSLAG_DB_HOST": "localhost",
                "OMSLAG_DB_USER": "root",
                "OMSLAG_DB_PASSWORD": "",
                "OMSLAG_DB_NAME": "omslag"
            },
            "args": [
                "run",
                "--no-debugger",
                // "--no-reload"
            ],
            "jinja": true
        }
    ]
}